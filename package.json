{
  "name": "express-typescript",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Parth Ambre",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=production --node-env=production",
    "serve": "node ./build/index.js",
    "start": "yarn build && yarn serve",
    "migration:generate": "drizzle-kit generate:mysql --out migrations --schema src/db/*.schema.ts",
    "dev": "webpack --mode=development --watch & nodemon build/index.js",
    "dev:win": "concurrently \"webpack --mode=development --watch\"  \"nodemon build/index.js\"",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "lint:fix": "eslint --fix --ignore-path .eslintignore --ext .ts .",
    "format": "prettier --write .",
    "test:unit": "jest --config='./unit.jest.config.js'",
    "test:api": "jest --config='./api.jest.config.js'"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "express": "^4.18.2",
    "joi": "^17.10.1",
    "mysql2": "^3.6.2",
    "prettier": "^3.0.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "webpack": "^5.88.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.5.0",
    "concurrently": "^8.2.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "onchange": "^7.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "*",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
